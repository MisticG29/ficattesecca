<!DOCTYPE html>
<html>

<head>
	<title>Tags</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			padding: 20px;
		}

		.tag {
			border: 1px solid #ccc;
			border-radius: 5px;
			padding: 10px;
			margin: 10px;
			background-color: #f5f5f5;
		}

		.file {
			margin-left: 20px;
			color: #555;
		}

		.folder-name {
			font-weight: bold;
			margin-bottom: 5px;
		}

		.folder-items {
			margin-left: 20px;
		}

		.folder-items li {
			margin-bottom: 5px;
		}
	</style>
</head>

<body>
	<% for (const tag of tags) { %>
		<div class="tag <%= tag.tags ? 'folder' : 'file' %>">
			<div class="folder-name">
				<%= tag.name %>
			</div>
			<% if (tag.tags && tag.tags.length > 0) { %>
				<ul class="folder-items">
					<% for (const subTag of tag.tags) { %>
						<li>
							<%= subTag.name %>
							<% if (subTag.tags && subTag.tags.length > 0) { %>
								<ul>
									<% for (const nestedTag of subTag.tags) { %>
										<li>
											<%= nestedTag.name %>
											<% if (nestedTag.files && nestedTag.files.length > 0) { %>
												<ul>
													<% for (const file of nestedTag.files) { %>
														<li>
															<%= file.name %>
														</li>
													<% } %>
												</ul>
											<% } %>
										</li>
									<% } %>
								</ul>
							<% } %>
						</li>
					<% } %>
				</ul>
			<% } %>
		</div>
	<% } %>
</body>

</html>
